description "UiTdatabank frontend"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

setuid www-data
setgid www-data

script
    set -a
    [ -f /etc/default/udb3-frontend ] && . /etc/default/udb3-frontend
    chdir /var/www/udb3-frontend
    
    if [ -f node_modules/nuxt/bin/nuxt.js ]; then
        exec /usr/bin/node node_modules/nuxt/bin/nuxt.js start
    else
        exec /usr/bin/env node node_modules/next/dist/bin/next start -H ${NEXT_HOST:-localhost} -p ${NEXT_PORT:-4000}
    fi
end script
